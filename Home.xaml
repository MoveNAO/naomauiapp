<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiapp1.Home">

    <ScrollView>
        <VerticalStackLayout Padding="16">

            <Image Source="logomagiusto.png"
                   HeightRequest="128" 
                   HorizontalOptions="Center"/>

            <Label Text="MoveNAO"
                   FontSize="21"
                   FontAttributes="Bold"
                   TextColor="#FF10F7E9"
                   HorizontalOptions="Center"
                   Margin="0,10,0,25" />

            <Label x:Name="Description"
                   Text="L'app ti permette di scattare una foto ad un attrezzo ginnico, e di consigliarti workout personalizzati, e di mostrarli grazie a NAO. Inoltre, tiene traccia delle tue statistiche ...... "
                   FontSize="20"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center"
                   Padding="10,0" />

            <Label Text="Non si tratta di essere i migliori, ma di essere migliori di ieri. Entra, allenati, supera i tuoi limiti!"
                   FontSize="18"
                   FontAttributes="Italic"
                   HorizontalOptions="Center"
                   LineBreakMode="WordWrap"
                   Margin="0,50,0,0" />

            <Label Text="Hai giÃ  bevuto acqua oggi?"
                   FontSize="18"
                   LineBreakMode="WordWrap"
                   Margin="0,50,0,0" />

            <Grid ColumnDefinitions="*,*,*,*,*,*,*"
                  HorizontalOptions="Center">
                <Image x:Name="Glass1" Source="bicchierevuoto.png" HeightRequest="64" Grid.Column="0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGlassTapped" CommandParameter="1"></TapGestureRecognizer>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Glass2" Source="bicchierevuoto.png" HeightRequest="64" Grid.Column="1">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGlassTapped" CommandParameter="2"></TapGestureRecognizer>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Glass3" Source="bicchierevuoto.png" HeightRequest="64" Grid.Column="2">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGlassTapped" CommandParameter="3"></TapGestureRecognizer>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Glass4" Source="bicchierevuoto.png" HeightRequest="64" Grid.Column="3">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGlassTapped" CommandParameter="4"></TapGestureRecognizer>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Glass5" Source="bicchierevuoto.png" HeightRequest="64" Grid.Column="4">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGlassTapped" CommandParameter="5"></TapGestureRecognizer>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Glass6" Source="bicchierevuoto.png" HeightRequest="64" Grid.Column="5">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGlassTapped" CommandParameter="6"></TapGestureRecognizer>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Glass7" Source="bicchierevuoto.png" HeightRequest="64" Grid.Column="6">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGlassTapped" CommandParameter="7"></TapGestureRecognizer>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
